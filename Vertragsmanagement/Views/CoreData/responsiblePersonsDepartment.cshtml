@model Vertragsmanagement.ViewModels.ResponsiblePersonsDepartmentViewModel
@{
    ViewBag.Title = "Dispatcher & Koordinatoren";
    Layout = "~/Views/CoreData/_Layout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <b>Für die Verträge der Abteilung @Model.department.name verantwortliche Dispatcher und Koordinatoren</b>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <b>Dispatcher</b>
                        </div>
                    </div>
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Abteilung</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1; }
                            @foreach (var item in Model.dispatchersOfDepartment)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.FullName</td>
                                    <td>@item.department.name</td>
                                    <td align="right"><a href="~/CoreData/DeleteResponsiblePersonFromDepartment/@Model.department.ID?userID=@item.ID&role=dispatcher" class="btn btn-danger" data-toggle="popover" data-content="Löschen"><span class="glyphicon glyphicon-trash"></span></a></td>
                                </tr>
                                i = i + 1;
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.allDispatchers.Count() != 0)
                {
                    <form class="form-inline" action="/CoreData/responsiblePersonsDepartment/@Model.department.ID" method="post">
                        <div class="form-group">
                            <label value="">Dispatcher hinzufügen</label>
                            <select class="form-control" id="userID" name="userID">
                                @foreach (var item in Model.allDispatchers)
                                {
                                    <option value="@item.ID">@item.FullName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" name="role" value="dispatcher" class="btn btn-success" data-toggle="popover" data-content="Hinzufügen"><span class="glyphicon glyphicon-plus"></span></button>
                        </div>
                    </form>
                }
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <b>Koordinatoren</b>
                        </div>
                    </div>
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Abteilung</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ i = 1; }
                            @foreach (var item in Model.coordinatorsOfDepartment)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.FullName</td>
                                    <td>@item.department.name</td>
                                    <td align="right"><a href="~/CoreData/DeleteResponsiblePersonFromDepartment/@Model.department.ID?userID=@item.ID&role=coordinator" class="btn btn-danger" data-toggle="popover" data-content="Löschen"><span class="glyphicon glyphicon-trash"></span></a></td>
                                </tr>
                                i = i + 1;
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.allCoordniators.Count() != 0)
                {
                    <form class="form-inline" action="/CoreData/responsiblePersonsDepartment/@Model.department.ID" method="post">
                        <div class="form-group">
                            <label value="">Koordinator hinzufügen</label>
                            <select class="form-control" id="userID" name="userID">
                                @foreach (var item in Model.allCoordniators)
                                {
                                    <option value="@item.ID">@item.FullName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" name="role" value="coordinator" class="btn btn-success" data-toggle="popover" data-content="Hinzufügen"><span class="glyphicon glyphicon-plus"></span></button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
