@{
    ViewBag.Title = "Import aus CSV Datei";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Import aus CSV Datei</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <h2>Kostenstellen importieren</h2>
        <label>Wählen Sie eine CSV Datei aus, die die zu importierenden Kostenstellen enthält</label>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group">
                <input type="file" name="path"/>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Abbrechen</button>
        <input class="btn btn-primary" type="submit" id="path" value="Daten importieren" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
